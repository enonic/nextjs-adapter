{
  "name": "@enonic/nextjs-adapter",
  "version": "3.0.0-B2",
  "license": "Apache-2.0",
  "main": "index.js",
  "author": "Pavel Milkevich <pmi@enonic.com>",
  "contributors": [
    "Christian Westgaard <cwe@enonic.com>"
  ],
  "files": [
    "*.d.ts",
    "*.map",
    "baseMappings*",
    "client.js",
    "common",
    "guillotine",
    "index*",
    "i18n",
    "query",
    "src",
    "types",
    "utils",
    "views"
  ],
  "keywords": [
    "enonic",
    "nextjs",
    "adapter",
    "typescript",
    "ecmascript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "del-cli *.d.ts *.js.map baseMappings.* client.* common coverage index.* enonic-nextjs-adapter-*.tgz guillotine i18n query types utils views dist",
    "build": "tsc",
    "build:prod": "tsc --outDir ./dist && npx --yes cpy-cli package.json README.md ./dist",
    "release": "concurrently -c auto -g --timings npm:test npm:lint npm:build:prod",
    "check:types": "tsc --noEmit",
    "madge": "madge -i docs/madge.png -x '(constants|env)\\.ts' src/index.ts",
    "lint": "eslint --quiet src",
    "lint:fix": "eslint --fix src",
    "prebuild:prod": "npm run clean",
    "prebuild": "npm run clean",
    "premadge": "mkdirp docs",
    "pretest": "del-cli coverage",
    "test": "jest --no-cache --coverage"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.5.4",
    "html-react-parser": "^5.1.1",
    "negotiator": "^0.6.3",
    "next": "^14.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "unescape": "^1.0.1"
  },
  "devDependencies": {
    "@edge-runtime/jest-environment": "^2.3.8",
    "@enonic-types/core": "^7.14.0-B2",
    "@enonic/eslint-config": "^1.1.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/negotiator": "^0.6.3",
    "@types/node": "^20.11.10",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.19.1",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "madge": "^6.1.0",
    "mkdirp": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "types": "index.d.ts"
}
