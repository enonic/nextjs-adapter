{
  "name": "@enonic/nextjs-adapter",
  "version": "3.0.0-B1",
  "license": "Apache-2.0",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "del-cli coverage dist",
    "copy": "npx --yes cpy-cli package.json README.md dist",
    "copy:types": "npx cpy-cli 'src/types/*' 'dist/types/'",
    "build": "tsc",
    "build:prod": "concurrently -c auto -g --timings npm:test npm:lint npm:build",
    "madge": "madge -i docs/madge.png -x '(constants|env)\\.ts' src/index.ts",
    "lint": "eslint --quiet src",
    "lint:fix": "eslint --fix src",
    "postbuild": "npm run copy:types",
    "prebuild": "del-cli dist",
    "premadge": "npx mkdirp docs",
    "pretest": "del-cli coverage",
    "prepack": "npm run build:prod",
    "test": "jest --no-cache --coverage"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.5.4",
    "html-react-parser": "^5.1.1",
    "lru-cache": "^10.2.0",
    "negotiator": "^0.6.3",
    "next": "^14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "unescape": "^1.0.1"
  },
  "devDependencies": {
    "@enonic-types/core": "^7.14.0-B2",
    "@enonic/eslint-config": "^1.1.0",
    "@types/negotiator": "^0.6.3",
    "@types/node": "^20.11.10",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.19.1",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "madge": "^6.1.0",
    "mkdirp": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
